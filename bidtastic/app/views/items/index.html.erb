<div class="page-header">
    <%= link_to new_item_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-plus-sign"></span>
      Add to Auction
    <% end %>
    <h1>Welcome to The Annual Bones' Gala Auction</h1>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <%- @items.each do |item| %>
    <div class="thumbnail">
        <h4><%= item.name %></h4>

        <% if logged_in? && favorited(item.id) == true %>
           <h4 class="faved-heart" data-remote=true data-type=script data-itemid="<%= item.id %>"><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></h4>
        <% elsif logged_in? && favorited(item.id) == false %>
         <h4 class="fav-heart" data-remote=true data-type=script data-itemid="<%= item.id %>"><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></h4>
        <% end %>







        <%= item.image_data %>
        <div class="caption">
          <h5>Current Bid:</h5>
          <p>CURRENT BID GOES HERE</p>
          <h5> Description: </h5>
          <p><%= item.description %></p>
          <a href="#" class="placebid btn btn-default" role="button"><span class="glyphicon glyphicon-flag"  aria-hidden="true"></span>Place Bid</a>
            <%= link_to item do %>
           <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
           <% end %>
           <%= link_to edit_item_path(item) do %>
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
           <% end %>
          <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
