<div class="page-header">
  <%= link_to items_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Auction List
  <% end %>
  <% if admin_logged_in? %>
    <%= link_to edit_item_path(@item), class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit Item
    <% end %>
  <% end %>
  <h1><%= @item.name %></h1>
</div>
<div class="row media-tex">
  <div class="col-xs-12 col-md-4 item-show-image">
    <%= image_tag(@item.image_url(:medium), class: "img-responsive") %>
  </div>
  <div class="col-xs-12 col-md-8">
    <h4>Item Description:</h4>
    <p> <%= @item.description %></p>
    <h4>Item Category:</h4>
    <p><%= @item.category %></p>
    <h4>Minimum Bid: <%= number_to_currency(@item.minimum_bid, precision: 0) %></h4>
    <h4>Bidding Increment: <%= number_to_currency(@item.bid_increment, precision: 0) %></h4>
  </div>
</div>
<div class="body-show">
  <% if user_logged_in? %>
    <span> <%= render "bids/form" %></span>
  <% end %>
  <h5> Current Bids:</h5>
  <ul class="list-group">
    <li class="list-group-item bidamount-list-group-item"><%= render "bids/form" %></span></li>
    <%= render @item.bids.order(bid_amount: :desc) %>
  </ul>
</div>
