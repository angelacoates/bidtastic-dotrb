<div class="page-header">
  <%= link_to new_item_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
      Add Auction Item
  <% end %>
  <h1 class="custom-header">Welcome to The Annual Bones' Gala Auction</h1>
</div>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <%- @items.each do |item| %>
    <div class="thumbnail">
      <div class="textline">
        <h4><%= item.name %></h4>
        <% if logged_in? && favorited(item.id) == true %>
          <p class="faved-heart" data-itemid="<%= item.id %>"> &hearts;</p>
        <% elsif logged_in? && favorited(item.id) == false %>
          <p class="fav-heart" data-itemid="<%= item.id %>"> &hearts;</p>
        <% end %>
      </div>

      <%= image_tag(item.image_url(:small)) %>
      <div class="caption">
        <h5>Current Bid:</h5>
        <p>CURRENT BID GOES HERE</p>
        <h5> Description: </h5>
        <p><%= item.description %></p>
        <%= link_to item do %>
          <button class="placebid btn btn-default" role="button"><span class="glyphicon glyphicon-flag"  aria-hidden="true"></span>Place Bid</button>
        <% end %>
        <%= link_to edit_item_path(item) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
