<div class="page-header">
      <h1>Signin</h1>
    </div>

    <%= form_tag(signin_path, html: { class: "form-horizontal", role: "form" }) do %>
      <div class="form-group">
        <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <div class="col-sm-10">
          <%= password_field_tag :password, class: "form-control" %>
        </div>
      </div>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    <% end %>

    <div class="wrapper">
      <div class="s-form-signin">
        <%= form_tag(signin_path, html: { class: "form-horizontal", role: "form" }) do %>
        <h2 class="form-signin-heading">Please Signin</h2>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, nil, class: "form-control" %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
        <%= submit_tag "Submit", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Signup", signup_path %>
      </div>
    </div>
